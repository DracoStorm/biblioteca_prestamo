---
interface Props {
    registerurl: string;
    updateurl: string;
    searchurl: string;
    deleteurl: string;
}
const { registerurl, updateurl, searchurl, deleteurl } = Astro.props;
---

<div>
    <a href={registerurl} id="register">󰗛</a>
    <p>Registrar un libro</p>
    <a href={updateurl} id="update">󱚌</a>
    <p>Actualizar un libro</p>
    <a href={searchurl} id="search">󰺄</a>
    <p>Buscar un libro</p>
    <a href={deleteurl} id="delete">󰗙</a>
    <p>Borrar un libro</p>
</div>

<style>
    div {
        width: 80%;
        height: 500px;
        margin-left: 10rem;
        margin-top: 4rem;
        display: grid;
        grid-template-areas: "register update" "search delete";
        align-items: center;
        text-align: center;
        justify-items: center;
        background-color: #003a5d;
        border-radius: 1rem;
    }
    a {
        text-decoration: none;
        color: aliceblue;
        font-size: 5rem;
    }
    #register {
        grid-area: auto;
    }
    #update {
        grid-area: auto;
    }
    #search {
        grid-area: auto;
    }
    #delete {
        grid-area: auto;
    }
</style>
