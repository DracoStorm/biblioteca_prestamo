---
interface Props {
    message: string;
}

const { message } = Astro.props;
---

<div>
    <span id="message">{message}</span>
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-alert-triangle-filled" width="40" height="67" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ff4500" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M12 1.67c.955 0 1.845 .467 2.39 1.247l.105 .16l8.114 13.548a2.914 2.914 0 0 1 -2.307 4.363l-.195 .008h-16.225a2.914 2.914 0 0 1 -2.582 -4.2l.099 -.185l8.11 -13.538a2.914 2.914 0 0 1 2.491 -1.403zm.01 13.33l-.127 .007a1 1 0 0 0 0 1.986l.117 .007l.127 -.007a1 1 0 0 0 0 -1.986l-.117 -.007zm-.01 -7a1 1 0 0 0 -.993 .883l-.007 .117v4l.007 .117a1 1 0 0 0 1.986 0l.007 -.117v-4l-.007 -.117a1 1 0 0 0 -.993 -.883z" stroke-width="0" fill="currentColor" />
      </svg>
</div>

<style>
    div {
        display: flex;
        background-color: #59363697;
        text-align: center;
        border-radius: 0.5rem;
        overflow:hidden
        height: 3rem;
        line-height: 2.4;
        font-size: 2rem;
        margin: 5rem;
        table-layout: fixed;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        height: 5rem;
        color: #fefefe;
    }
    span {
        flex-grow: 1;
        font-family: 'Lora', sans-serif;
    }
    
    #matricula {
        background-color: #1116;
    }

    svg {
        background-color: #111a;
        border-radius: 0;
        color: #fefefe;
        font-size: 3.5rem;
        font-weight: bold;
        padding: 0.4rem 2rem;
        text-decoration: none;
        line-height: 1.2;
        table-layout: fixed;
        width: 6rem;
    }
</style>
