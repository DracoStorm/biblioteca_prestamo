---
interface Props {
    filter: string;
}

const { filter } = Astro.props;
---

<input type="button" value={filter} />

<style>


    input {
        background-color: #8C618C;
        color: #fefefe;
        font-family: 'Bitter';
        font-size: 0.9rem;
        font-weight: bold;
        padding: 0.2rem 1rem;
        box-shadow: 0.2rem 0.2rem 1rem #0005;
    }
    input:focus{
        background-color: #f2d0cf;
        color: #000;
    }
</style>
