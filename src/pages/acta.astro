---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/NavAdmin.astro";
---

<Layout title="acta">
    <Nav />
    <form action="">
        <h1>Acta</h1>
        <div>
            <label for="">Matricula</label>
            <input type="text" />
        </div>

        <div id="btn">
            <input type="button" value="Validar" />
            <input type="button" value="Expedir" />
        </div>
    </form>
</Layout>

<style>
    form {
        background-color: #00b3e466;
        margin: 10rem auto;
        padding: 1rem;
        height: 20rem;
        width: 40%;
        border-radius: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
    }
    #btn > input {
        background-color: #00b3e4;
        width: 6rem;
        color: #fefefe;
        font-size: 0.9rem;
        font-weight: bold;
        padding: 0.2rem 1rem;
        box-shadow: 0.2rem 0.2rem 1rem #0005;
    }
</style>
