---
import Layout from "../layouts/Layout.astro";
import NavUser from "../components/NavUser.astro";
import Filter from "../components/Filter.astro";
import Search from "../components/Search.astro";
import SearchResult from "../components/SearchResult.astro";
import BookItem from "../components/BookItem.astro";
---

<Layout title="Welcome to Astro.">
	<NavUser />
	<Search>
		<Filter filter="Titulo" />
		<Filter filter="Categoria" />
		<Filter filter="Editorial" />
		<Filter filter="Autor" />
		<Filter filter="Lugar" />
	</Search>
	<SearchResult>
		<BookItem
			icon=""
			title="Inginieria Aeroespacial"
			category="Ingenieria"
			place="Central"
			autor="Richard Wayland"
			editorial="Ingenieros > Licenciados"
		/>
		<BookItem
			icon=""
			title="El llamado de Cthulu"
			category="Literatura Moderna"
			place="Benito Juarez"
			autor="Howard Philips Lovecraft"
			editorial="Locura Onírica"
		/>
		<BookItem
			icon=""
			title="Learning English: Two Ways"
			category="Idiomas"
			place="5 de Mayo"
			autor="Elena Herrera"
			editorial="Lingua House"
		/>
	</SearchResult>
	<footer>.</footer>
</Layout>
