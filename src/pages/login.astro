---
import Layout from "../layouts/Layout.astro";
---

<Layout title="login">
    <form action="login.js" method="post">
        <div>
            <h1>Bibliotecas BUAP</h1>
            <h2>Iniciar Sesion</h2>
        </div>

        <label for="Register">Matrícula</label>
        <input type="text" name="Register" id="res" />
        <label for="ResumeName">Nombre</label>
        <input type="text" name="ResumeName" id="resumeN" />
        <input type="button" value="Iniciar Sesión" id="login" />
    </form>
</Layout>

<style>
    @media (width <= 1000px) {
        form {
            width: 80%;
        }
    }

    @media (width > 1000px) {
        form {
            width: 30%;
        }
    }
    form {
        position: absolute;
        top: 15%;
        left: 30%;
        width: 40%;
        height: 50%;
        padding: 4rem 1rem;
        border-radius: 1rem;
        display: flex;
        background-color: #00b3e466;
        justify-content: space-around;
        flex-direction: column;
        align-items: center;
        box-shadow: 0.5rem 0.5rem 2rem #0004;
    }

    h1,
    h2 {
        text-align: center;
        
    }

    #login {
        background-color: #00b3e4;
        width: 9rem;
        color: #fefefe;
        font-size: 0.9rem;
        font-weight: bold;
        padding: 0.2rem 1rem;
        box-shadow: 0.2rem 0.2rem 1rem #0005;
        margin-top: 1rem;
    }
    
    #res, #resumeN {
        padding: .4rem;
    }

    label{
        font-size: 20px;
    }
</style>
