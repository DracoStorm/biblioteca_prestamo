import Layout from "../layouts/Layout.astro";
import LoginForm from "../components/LoginForm.svelte";
import { validateSesion } from "../API/sesion";

const request = Astro.request;

if (request.method == "POST") {
    const querystr = await request.text();
    const data = new URLSearchParams(querystr);
    const register = data.get("register");
    const full_name = data
        .get("full-name")
        ?.split(" ")
        .filter((word) => word !== "");
    let ok = false;
    if (register && full_name) {
        await validateSesion(register, full_name[0], full_name[1])
            .then((response) => {
                if (!response.ok) return;
                return response.headers;
            })
            .then((headers) => {
                if (headers) {
                    const token = headers.get("token");
                    if (token) {
                        Astro.cookies.set("token", token);
                        ok = true;
                    }
                }
            });
        if (parseInt(register) <= 199000000 && ok) {
            return Astro.redirect("/admin/loan/register");
        } else if (ok) {
            return Astro.redirect("/student/loan");
        }
    }
}
---

<Layout title="login">
    <LoginForm client:only="svelte" />
</Layout>
