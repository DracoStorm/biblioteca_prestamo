---
import Layout from "../layouts/Layout.astro";
---

<Layout title="login">
    <form action="login.js" method="post">
        <div>
            <h1>Bibliotecas BUAP</h1>
            <h2>Iniciar Sesión</h2>
        </div>

        <label for="Register">Matrícula</label>
        <input type="text" name="Register" id="res" />
        <label for="ResumeName">Nombre</label>
        <input type="text" name="ResumeName" id="resumeN" />
        <input type="button" value="Iniciar Sesión" id="login" />
    </form>
</Layout>

<style>
    body{
        background-image: url(/imagenes/foto2.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: top;

    }
    @media (width <= 1000px) {
        form {
            width: 80%;
        }
    }

    @media (width > 1000px) {
        form {
            width: 30%;
        }
    }
    form {
        color: #ffffff;
        position: absolute;
        top: 15%;
        left: 30%;
        width: 40%;
        height: 50%;
        padding: 4rem 1rem;
        border-radius: 1rem;
        display: flex;
        background: #32253F7c;
        justify-content: space-around;
        flex-direction: column;
        align-items: center;
        box-shadow: 0.5rem 0.5rem 2rem #0004;
    }

    h1,
    h2 {
        text-align: center;
    }

    #login {
        background-color: #593954;
        width: 9rem;
        color: #ffffff;/*Botón*/
        font-size: 0.9rem;
        font-weight: bold;
        padding: 0.2rem 1rem;
        box-shadow: 0.2rem 0.2rem 1rem #0005;
        margin-top: 1rem;
    }

    #res,
    #resumeN {
        padding: 0.2rem;
    }

    label {
        font-size: 20px;
    }
    input {
        background-color: #dfd3d38e;
    }
</style>
