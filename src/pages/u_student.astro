---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/NavAdmin.astro";
---

<Layout title="modificar estudiante">
    <Nav />
    <form action="mod">
        <h1>Actualizar Estudiante</h1>
        <label for="">Nombre</label>
        <input type="text" />
        <label for="">Matricula</label>
        <input type="text" />
        <label for="">Correo</label>
        <input type="text" />
        <div id="btns">
            <a href="confirm" id="mod">Modificar</a>
        </div>
    </form>
</Layout>

<style>
    @media (width <= 1000px) {
        form {
            width: 80%;
        }
    }

    @media (width > 1000px) {
        form {
            width: 30%;
        }
    }
    form {
        position: absolute;
        top: 25%;
        left: 30%;
        width: 40%;
        height: 40%;
        padding: 4rem 1rem;
        border-radius: 1rem;
        display: flex;
        background-color: #00b3e466;
        justify-content: space-around;
        flex-direction: column;
        align-items: center;
        box-shadow: 0.5rem 0.5rem 2rem #0004;
    }

    h1 {
        text-align: center;
    }

    #mod {
        background-color: #00b3e4;
        width: 9rem;
        color: #fefefe;
        font-size: 0.9rem;
        font-weight: bold;
        padding: 0.2rem 1rem;
        box-shadow: 0.2rem 0.2rem 1rem #0005;
        margin: auto;
        border-radius: 0.8rem;
        text-align: center;
        text-decoration: none;
    }
    #btns {
        margin-top: 1rem;
    }
</style>
