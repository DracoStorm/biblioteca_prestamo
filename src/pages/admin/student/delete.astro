---
import Layout from "../../../layouts/Layout.astro";
import NavBarAdmin from "../../../components/NavBarAdmin.astro";
---

<Layout title="eliminar libro">
    <NavBarAdmin />
    <form action="delete">
        <h1>Eliminar registro de estudiante</h1>
        <label for="">Matr√≠cula</label>
        <input type="text" />

        <div id="btns"><a href="/admin/confirm" id="delete">Eliminar</a></div>
    </form>
</Layout>

<style>
    @media (width <= 1000px) {
        form {
            width: 80%;
        }
    }

    @media (width > 1000px) {
        form {
            width: 30%;
        }
    }
    form {
        position: absolute;
        top: 25%;
        left: 30%;
        width: 40%;
        height: 40%;
        padding: 4rem 1rem;
        border-radius: 1rem;
        display: flex;
        background-color: #443659;
        justify-content: space-around;
        flex-direction: column;
        align-items: center;
        box-shadow: 0.5rem 0.5rem 2rem #0004;
    }

    h1 {
        text-align: center;
    }
    #delete {
        background-color: #e03333;
        width: 9rem;
        color: #fefefe;
        font-size: 0.9rem;
        font-weight: bold;
        padding: 0.2rem 1rem;
        box-shadow: 0.2rem 0.2rem 1rem #464444a9;
        margin: auto;
        border-radius: 0.8rem;
        text-align: center;
        text-decoration: none;
    }
    #btns {
        margin-top: 1rem;
    }
</style>
